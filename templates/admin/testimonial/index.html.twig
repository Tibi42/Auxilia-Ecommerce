{% extends 'base.html.twig' %}

{% block title %}Gestion des Témoignages - Admin{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 fw-bold text-primary">Gestion des Témoignages</h1>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">Retour au Dashboard</a>
        </div>

        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Auteur</th>
                            <th>Commentaire</th>
                            <th>Note</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for t in testimonials %}
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">{{ t.name }}</div>
                                    <div class="small text-muted">{{ t.email }}</div>
                                </td>
                                <td>
                                    <div class="text-wrap" style="max-width: 400px; font-size: 0.9rem;">
                                        {{ t.content }}
                                    </div>
                                </td>
                                <td>
                                    <div class="text-warning">
                                        {% for i in 1..5 %}
                                            <i class="{{ i <= t.rating ? 'fas' : 'far' }} fa-star"></i>
                                        {% endfor %}
                                    </div>
                                </td>
                                <td class="small">{{ t.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    {% if t.isApproved %}
                                        <span class="badge bg-success text-white rounded-pill px-3">Approuvé</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark rounded-pill px-3">En attente</span>
                                    {% endif %}
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        {% if not t.isApproved %}
                                            <form action="{{ path('app_admin_testimonial_approve', {id: t.id}) }}" method="POST">
                                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ t.id) }}">
                                                <button class="btn btn-sm btn-success rounded-pill px-3">Approuver</button>
                                            </form>
                                        {% else %}
                                            <form action="{{ path('app_admin_testimonial_reject', {id: t.id}) }}" method="POST">
                                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ t.id) }}">
                                                <button class="btn btn-sm btn-warning rounded-pill px-3">Retirer</button>
                                            </form>
                                        {% endif %}
                                        <form action="{{ path('app_admin_testimonial_delete', {id: t.id}) }}" method="POST" onsubmit="return confirm('Supprimer définitivement ce commentaire ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ t.id) }}">
                                            <button class="btn btn-sm btn-outline-danger" style="border-radius: 8px;">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">Aucun témoignage pour le moment.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
