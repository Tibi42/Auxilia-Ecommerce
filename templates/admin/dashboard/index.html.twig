						{% set status_colors = {
						'pending': '#f59e0b',
						'paid': '#10b981',
						'confirmed': '#10b981',
						'shipped': '#8b5cf6',
						'delivered': '#3b82f6',
						'cancelled': '#ef4444'
					} %}
