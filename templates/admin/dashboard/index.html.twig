											<i class="fas fa-circle x-small me-1 opacity-50"></i>
											{{ info.label }}
										</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			{% else %}
				<p class="text-muted text-center py-5">Aucune commande r√©cente</p>
			{% endif %}
		</div>
	</div>
{% endblock %}
